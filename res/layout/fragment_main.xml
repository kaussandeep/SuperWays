<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment" 
    >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:ems="10"
        android:hint="CN Number"
        android:inputType="textPersonName"
        android:width="150dp" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/section_label"
        android:ems="10"
        android:hint="Date"
        android:onClick="datebox"
        android:width="150dp" />

    <EditText
        android:id="@+id/Freight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Weight"
        android:layout_alignBottom="@+id/Weight"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Freight"
        android:inputType="textPersonName"
        android:width="100dp" />

    <EditText
        android:id="@+id/pkgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/party"
        android:layout_alignBottom="@+id/party"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Pkgs"
        android:inputType="text"
        android:width="150dp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/button1"
        android:onClick="query"
        android:text="Retrieve" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/previousbutton"
        android:layout_alignBottom="@+id/previousbutton"
        android:layout_alignRight="@+id/LorryHire"
        android:layout_marginRight="22dp"
        android:text="Next" 
        android:onClick="next"/>

    <EditText
        android:id="@+id/party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/section_label"
        android:layout_below="@+id/section_label"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Destination"
        android:inputType="textPersonName"
        android:width="150dp" />

    <Button
        android:id="@+id/previousbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_toLeftOf="@+id/nextbutton"
        android:onClick="previous"
        android:text="Previous" />

    <EditText
        android:id="@+id/LorryHire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TruckNumber"
        android:layout_alignBottom="@+id/TruckNumber"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="LorryHire"
        android:inputType="textPersonName"
        android:width="100dp" />

    <EditText
        android:id="@+id/Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/party"
        android:layout_below="@+id/party"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="Weight"
        android:inputType="textPersonName"
        android:width="100dp" />

    <EditText
        android:id="@+id/Consigner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Freight"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Consigner"
        android:inputType="textPersonName"
        android:width="150dp" />

    <EditText
        android:id="@+id/Consignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Consigner"
        android:layout_alignBottom="@+id/Consigner"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Consignee"
        android:width="150dp" />

    <EditText
        android:id="@+id/TruckNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Consignee"
        android:layout_below="@+id/Consignee"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="TruckNumber"
        android:inputType="textPersonName"
        android:width="100dp" />

    <EditText
        android:id="@+id/profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/query"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:width="150dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:text="Reset"
        android:onClick="reset" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LorryHire"
        android:layout_alignBottom="@+id/LorryHire"
        android:layout_alignLeft="@+id/textView1"
        android:text="LorryHire"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profit"
        android:layout_alignBottom="@+id/profit"
        android:layout_toLeftOf="@+id/profit"
        android:text="Profit"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reset"
        android:layout_alignLeft="@+id/TruckNumber"
        android:onClick="submit"
        android:text="Save" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Freight"
        android:layout_alignBottom="@+id/Freight"
        android:layout_toRightOf="@+id/TextView02"
        android:text="Freight"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>